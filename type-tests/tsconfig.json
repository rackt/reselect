{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "target": "ES2015",
    "lib": ["ES2021.WeakRef"],
    "declaration": true,
    "noEmit": true,
    "skipLibCheck": true,
    "paths": {
      "reselect": ["../src/index"], // @remap-prod-remove-line
      "@internal/*": ["../src/*"]
    }
  },
  "include": ["**/*.ts", "../typescript_test/**/*.ts"]
}
